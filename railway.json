{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "outputs": ["./node_modules"]
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "GITHUB_USERNAME": {
      "description": "GitHub username for image uploads",
      "value": "id617985-eng",
      "required": true
    },
    "GITHUB_REPO_NAME": {
      "description": "GitHub repository name for images",
      "value": "new-items",
      "required": true
    },
    "GITHUB_TOKEN": {
      "description": "GitHub Personal Access Token with repo permissions",
      "required": true
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "value": "mongodb+srv://aifoodies:mahalkitaivy@aifoodies.ylsnhql.mongodb.net/nachos?retryWrites=true&w=majority",
      "required": false
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token generation",
      "generator": "secret",
      "required": true
    },
    "PORT": {
      "description": "Port for the server to run on",
      "value": "8080",
      "required": false
    },
    "NODE_ENV": {
      "description": "Node.js environment",
      "value": "production",
      "required": false
    }
  }
}